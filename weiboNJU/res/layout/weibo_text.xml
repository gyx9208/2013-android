<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/headImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/defaulthead" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="董爷威霸"
                android:textColor="@color/darkgreen"
                android:textSize="@dimen/middle_text" />

            <TextView
                android:id="@+id/numOfComAndTrans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:text="评论 2 转发 8"
                android:textColor="@color/cadetblue"
                android:textSize="@dimen/small_text" />

        </LinearLayout>

        <TextView
            android:id="@+id/mainWeibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/t0"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/weiboImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:maxWidth="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_pic"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ImgGridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:id="@+id/imgset1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="3dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:maxHeight="90dp"
                    android:maxWidth="90dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/imgset2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="3dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/imgset3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="3dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/img7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="3dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_pic"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/repostContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/transmit_layout_border"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0.1dip"
                android:background="@drawable/transmit_layout"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/transWeibo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/t1"
                    android:textColor="@color/black" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天17:48"
                android:textColor="@color/orange"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/fromText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="来自：小米手机"
                android:textSize="@dimen/small_text" />

            <TextView
                android:id="@+id/attitudesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞+1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>